  month     =  may,
  year      =  2019,
  address   = "New York, NY, USA",
  keywords  = "human augmentation, agency, reaction time, electrical muscle
               stimulation",
  location  = "Glasgow, Scotland Uk"
}

@ARTICLE{Bian2019-qp,
